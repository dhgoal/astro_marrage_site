---
import Register from "./Register.astro"
---

<div class="heroArea">
    <div class="linearGradient"></div>
    <div class="registerForm">
        <Register />
    </div>
    <div class="hidden"></div>
</div>

<style>
    .heroArea {
        position: relative;
        width: 100vw;
        min-height: 100vh;
        overflow: hidden;
        background: url('/assets/images/landing/landing-reklam-heroArea-area-min.webp') center center / cover no-repeat;
        display: flex;
        flex-direction: row;
        -webkit-box-align: center;
        align-items: center;
        -webkit-box-pack: start;
        justify-content: flex-start;
        padding-bottom: 20px;
    }

    .heroArea .linearGradient {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
        background: linear-gradient(rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 50%);
    }

    .registerForm {
        position: relative;
        padding-left: calc(-575px + 50vw);
        padding-right: calc(-575px + 50vw);
        box-sizing: border-box;
        margin-top: 110px;
    }
    
    .hidden {
        position: relative;
        padding-bottom: 65px;
        width: 100%;
    }
</style>