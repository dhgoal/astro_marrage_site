---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="tr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Üyelerini bilimsel kişilik testi ve sosyo-ekonomik yaşam analizi sonucunda eşleştiren, bütün profillerin gizli olduğu ciddi ilişki ve evlilik sitesi." />
		<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
		<link rel="icon" href="/favicon.png" />
		<link rel="stylesheet" href="/styles/fonts.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body style="overflow: revert-layer;">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--font-manrope: Manrope, sans-serif;
		--color-gray-storm: #697488;
	}
	html {
		width: 100vw;
		overflow-x: hidden;
		min-height: 100vh;
		padding: 0;
		margin: 0;
		font-family: Manrope, sans-serif;
		-webkit-appearance: none;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
	}
	body {
		background-color: rgba(245, 245, 245, 0.5);
		line-height: 1;
	}
</style>
